rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users collection
    match /users/{userId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.auth.uid == userId;
      allow update: if request.auth != null && request.auth.uid == userId;
      allow delete: if request.auth != null && request.auth.uid == userId;
    }

    // Households collection
    match /households/{householdId} {
      // Any authenticated user can create a household
      allow create: if request.auth != null;

      // Authenticated users can query households (needed for invite code lookup)
      allow list: if request.auth != null;

      // Members can read their own household
      allow get: if request.auth != null && request.auth.uid in resource.data.members;

      // Members can update their household, OR a new user can add themselves via invite code
      allow update: if request.auth != null && (
        // Existing members can update
        request.auth.uid in resource.data.members
        // OR a non-member can join (only adding their own UID to members)
        || (request.auth.uid in request.resource.data.members
            && request.resource.data.members.size() == resource.data.members.size() + 1)
      );

      // Only admin can delete
      allow delete: if request.auth != null && resource.data.adminUid == request.auth.uid;
    }

    // Food items collection
    match /food_items/{itemId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update: if request.auth != null;
      allow delete: if request.auth != null;
    }

    // Recipes collection
    match /recipes/{recipeId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update: if request.auth != null;
      allow delete: if request.auth != null;
    }

    // Community products (crowdsourced barcode database)
    match /community_products/{productId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update: if request.auth != null;
    }

    // Verification codes (email OTP)
    match /verification_codes/{email} {
      allow read: if true;
      allow create: if true;
      allow update: if true;
    }

    // Password reset codes
    match /password_reset_codes/{email} {
      allow read: if true;
      allow create: if true;
      allow update: if true;
      allow delete: if true;
    }

    // Notifications
    match /notifications/{notificationId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update: if request.auth != null;
      allow delete: if request.auth != null;
    }
  }
}
